#include <iostream>
using namespace std;

void func(int arr[],int n){
    int j = 0,temp=0;
    for(int i=0;i<n;i++){
        if(arr[i]<0){
            if(i!=j){
                swapFun(arr[]);
            }
            j++;
        }
    }
}
void swapFun(int arr[n]){
    int temp = arr[i];
    arr[i] = arr[j];
    arr[j] = temp;
}
int main() {
    int arr[] = {12,-1,-3,8,4,-2,-5,3,-9,18};
    int n = sizeof(arr)/sizeof(arr[0]);
    func(arr,n);
    cout << "sorted list of array : " << endl;
    for(int i=0;i<n;i++){
        cout << arr[i] << " ";

    }


}

